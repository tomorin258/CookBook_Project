<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="420" prefWidth="640" style="-fx-background-color:#e6f4ff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RecipeLoginController">

    <!-- ── 顶栏：标题置中 ─────────────────────────────────────────── -->
    <top>
        <!-- StackPane 能天然居中子节点 -->
        <StackPane style="-fx-background-color:#d3eaff; -fx-padding:14;">
            <Label style="-fx-font-size:34; -fx-font-weight:bold; -fx-text-fill:#0d3b66;" text="CookBook -- Start a food tour!" />
        </StackPane>
    </top>

    <!-- ── 登录表单 ─────────────────────────────────────────────── -->
    <center>
        <VBox alignment="CENTER" spacing="18">
            <Label style="-fx-font-size:28; -fx-font-weight:bold;" text="Log In" />

            <!-- 输入区整体居中 -->
            <GridPane alignment="CENTER" hgap="12" vgap="14">
                <padding>
                    <Insets bottom="10" left="20" right="20" top="20" />
                </padding>

                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" alignment="CENTER" promptText="Enter your username" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" alignment="CENTER" promptText="Enter your password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <columnConstraints>
               <ColumnConstraints />
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <!-- 按钮区：圆角 + 主色调 -->
            <HBox alignment="CENTER" spacing="12">
                <Button fx:id="loginBtn" defaultButton="true" onAction="#onLogin" style="                             -fx-background-color:#0d3b66;                             -fx-text-fill:white;                             -fx-font-weight:bold;                             -fx-background-radius:20;                             -fx-padding:6 26;" text="Login" />
                <Button fx:id="signupBtn" onAction="#onSignup" style="                             -fx-background-color:#ffffff;                             -fx-text-fill:#0d3b66;                             -fx-font-weight:bold;                             -fx-border-color:#0d3b66;                             -fx-border-radius:20;                             -fx-background-radius:20;                             -fx-padding:6 24;" text="Sign Up" />
            </HBox>

            <Label fx:id="errorLabel" textFill="red" />
        </VBox>
    </center>
</BorderPane>
