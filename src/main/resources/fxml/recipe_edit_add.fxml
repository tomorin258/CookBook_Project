<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="850" prefWidth="768" style="-fx-background-color:#e6f4ff;-fx-font-family:'Segoe UI','sans-serif';" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RecipeManagementController">

    <!-- ── TOP BAR ─────────────────────────────────────────────────────────── -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color:#d3eaff;-fx-padding:12;">
            <!-- Back button -->
            <Button fx:id="backBtn" onAction="#onBack" style="-fx-background-color:#ffffff;-fx-text-fill:#0d3b66;-fx-font-weight:bold;                            -fx-border-color:#0d3b66;-fx-border-radius:6;-fx-background-radius:6;                            -fx-padding:4 14;" text="⟵  Back" />
            <Separator orientation="VERTICAL" />

            <!-- Title field -->
            <TextField fx:id="titleField" promptText="Recipe title" style="-fx-font-size:24;-fx-font-weight:bold;-fx-text-fill:#0d3b66;                               -fx-background-color:transparent;-fx-border-width:0 0 2 0;                               -fx-border-color:transparent transparent #0d3b66 transparent;" HBox.hgrow="ALWAYS" />

            <!-- Remove-all button -->
            <Button fx:id="removeAllBtn" onAction="#onRemoveAll" style="-fx-background-color:#ffffff;-fx-text-fill:#0d3b66;-fx-font-weight:bold;                            -fx-border-color:#0d3b66;-fx-border-radius:6;-fx-background-radius:6;                            -fx-padding:4 18;" text="Remove All" />

            <!-- Save button -->
            <Button fx:id="saveBtn" onAction="#onSave" style="-fx-background-color:#0d3b66;-fx-text-fill:#ffffff;-fx-font-weight:bold;                            -fx-background-radius:6;-fx-padding:4 20;" text="Save" />
        </HBox>
    </top>

    <!-- ── CENTER AREA ─────────────────────────────────────────────────────── -->
    <center>
        <VBox spacing="15" style="-fx-padding:15 20 20 20;">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label style="-fx-font-size:14;" text="Serve number:" />
                <Spinner fx:id="serveSpinner" editable="true" prefWidth="90" style="-fx-background-radius:6;" />
            </HBox>

            <!-- Ingredients table card -->
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background:#ffffff;-fx-background-radius:8;-fx-padding:6;" VBox.vgrow="ALWAYS">
                <content>
                    <VBox spacing="8">
                        <TableView fx:id="ingredientsTable" prefHeight="420" prefWidth="380" style="-fx-background-color:transparent;                                           -fx-table-cell-border-color:transparent;-fx-padding:4;" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="ingredientNameCol" prefWidth="120" text="Ingredient" />
                                <TableColumn fx:id="quantityCol" prefWidth="80" text="Quantity" />
                                <TableColumn fx:id="unitsCol" prefWidth="80" text="Units" />
                                <TableColumn fx:id="ingredientDescCol" prefWidth="160" text="Description" />
                            </columns>
                        </TableView>

                        <HBox alignment="CENTER_LEFT" spacing="10">
                            <Button fx:id="addRowBtn" onAction="#onAddRow" style="-fx-background-color:#0d3b66;-fx-text-fill:#ffffff;-fx-font-weight:bold;                                            -fx-background-radius:6;-fx-padding:4 16;" text="＋ Add Row" />
                            <Button fx:id="delRowBtn" onAction="#onDeleteRow" style="-fx-background-color:#ff595e;-fx-text-fill:#ffffff;-fx-font-weight:bold;                                            -fx-background-radius:6;-fx-padding:4 16;" text="− Delete Row" />
                        </HBox>
                    </VBox>
                </content>
            </ScrollPane>
        </VBox>
    </center>

    <!-- ── RIGHT SIDEBAR ───────────────────────────────────────────────────── -->
    <right>
        <VBox alignment="TOP_CENTER" spacing="14" style="-fx-padding:16 24 16 16;-fx-background-color:#d9ecff;">
            <!-- Image card -->
            <StackPane maxHeight="220" maxWidth="220" prefHeight="220" prefWidth="220" style="-fx-background-color:#ffffff;-fx-border-color:#d1d1d1;                               -fx-border-radius:8;-fx-background-radius:8;                               -fx-effect:dropshadow(gaussian,rgba(0,0,0,0.12),10,0,0,2);">
                <ImageView fx:id="recipeImageView" fitHeight="220" fitWidth="220" preserveRatio="true" />
            </StackPane>

            <!-- Upload image -->
            <Button fx:id="uploadBtn" onAction="#onUpload" style="-fx-background-color:#ffffff;-fx-text-fill:#0d3b66;-fx-font-weight:bold;                            -fx-border-color:#0d3b66;-fx-border-radius:20;-fx-background-radius:20;                            -fx-padding:4 20;" text="Upload Picture" />

            <Separator orientation="HORIZONTAL" prefWidth="200" style="-fx-background-color:#8cc7ff;" />

            <!-- Time inputs -->
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="219.0" spacing="10">
                <Label style="-fx-font-weight:bold;" text="Cooking:" />
                <TextField fx:id="cookTimeField" prefWidth="60" promptText="min" style="-fx-background-radius:6;" />
                <Label style="-fx-font-weight:bold;" text="min" />
            </HBox>



            <Separator orientation="HORIZONTAL" prefWidth="200" style="-fx-background-color:#8cc7ff;" />

            <!-- Instructions -->
            <Label style="-fx-font-size:14;-fx-font-weight:bold;" text="Instructions:" />
            <TextArea fx:id="instructionsArea" prefHeight="280" prefWidth="220" style="-fx-background-radius:8;-fx-control-inner-background:#ffffff;-fx-padding:6;" wrapText="true" VBox.vgrow="ALWAYS" />
        </VBox>
    </right>
</BorderPane>